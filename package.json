{
  "name": "contentful-extensions",
  "description": "Custom UI extensions to enhance the Contentful editor interface",
  "repository": "https://github.com/sumup/contentful-extensions.git",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "create:extension": "./bin/create/extension",
    "deploy": "lerna publish --skip-npm && lerna run deploy",
    "test": "lerna run test",
    "test:ci": "lerna run test -- --runInBand"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "contentful-cli": "^0.11.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "lerna": "^2.11.0",
    "prettier": "^1.12.1",
    "prettier-eslint": "^8.8.1"
  }
}
